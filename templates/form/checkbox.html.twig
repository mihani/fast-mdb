{% block form_label_class -%}
    col-sm-2
{%- endblock form_label_class %}

{% block form_group_class -%}
    col-sm-10
{%- endblock form_group_class %}

{% block checkbox_row -%}
    <div{% with {attr: row_attr|merge({class: (row_attr.class|default('') ~ ' col-md-6 col-12')|trim})} %}{{ block('attributes') }}{% endwith %}>{#--#}
        <div class="form-check">
            <div class="checkbox">
                {{- form_widget(form, {'attr': {'class' : 'form-check-input'}}) -}}
                {{- form_label(form) -}}
                {{- form_help(form) -}}
            </div>
        </div>
    </div>
{%- endblock checkbox_row %}