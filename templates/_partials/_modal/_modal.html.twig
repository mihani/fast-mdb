<div class="modal fade text-left" id="{{ modalId }}" tabindex="-1" role="dialog" aria-labelledby="{{ modalId }}-label" aria-hidden="true">
    <div class="modal-dialog modal-dialog-scrollable" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="{{ modalId }}-label">{% block modal_form_title %}{% endblock %}</h5>
                <button type="button" class="close" data-bs-dismiss="modal"
                        aria-label="Close">
                    <i class="bi bi-x"></i>
                </button>
            </div>
            <div class="modal-body">
                {% block modal_form_body %}{% endblock %}
            </div>
            <div class="modal-footer">
                {% block modal_form_footer %}
                    <button type="button" class="btn" data-bs-dismiss="modal">
                        <i class="bx bx-x d-block d-sm-none"></i>
                        <span class="d-none d-sm-block">{{ 'modal.button.close'|trans }}</span>
                    </button>
                {% endblock %}
            </div>
        </div>
    </div>
</div>
