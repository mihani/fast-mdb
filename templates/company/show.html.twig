{% extends 'base.html.twig' %}

{% block title %}{{ company.name }}{% endblock %}

{% block body %}
    <div class="page-heading">
        <div class="page-title">
            <div class="row">
                <div class="col-12 col-md-6 order-md-1 order-last">
                    <h3>{{ company.name }}</h3>
                </div>
            </div>
        </div>
        <section class="section row">
            <div class="col-12 col-lg-4">
                <div class="card">
                    <div class="card-body">
                        <div class="table-responsive">
                            <table class="table table-lg">
                                <tbody>
                                <tr>
                                    <th>Nom</th>
                                    <td>{{ company.name }}</td>
                                </tr>
                                <tr>
                                    <th>Date de création</th>
                                    <td>{{ company.createdAt ? company.createdAt|date('d-m-Y H:i:s') : '' }}</td>
                                </tr>
                                <tr>
                                    <th>Dernière mise à jour</th>
                                    <td>{{ company.updatedAt ? company.updatedAt|date('d-m-Y H:i:s') : '' }}</td>
                                </tr>
                                </tbody>
                            </table>
                        </div>
                    </div>
                    <div class="card-footer">
                        <div class="buttons row">
                            <div class="col-lg-2">
                                <a class="btn btn-primary" href="{{ path('company_edit', {'id': company.id}) }}">Edit</a>
                            </div>
                            {{ include('company/_delete_form.html.twig') }}
                        </div>
                    </div>
                </div>
            </div>
        </section>
        <a class="btn icon icon-left btn-outline-primary" href="{{ path('company_index') }}"><i class="bi bi-chevron-left"></i><span>Back to list</span></a>
    </div>
{% endblock %}
