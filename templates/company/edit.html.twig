{% extends 'base.html.twig' %}

{% block title %}{{ 'admin.company.edit.title'|trans({'%company%':company.name}) }}{% endblock %}

{% block body %}
    <div class="page-heading">
        <div class="page-title">
            <div class="row">
                <div class="col-12 col-md-6 order-md-1 order-last">
                    <h3>{{ 'admin.company.edit.title'|trans({'%company%':company.name}) }}</h3>
                </div>
            </div>
        </div>
        <section class="section row">
            <div class="col-12 col-lg-4">
                <div class="card">
                    <div class="card-body">
                        {{ include('company/_form.html.twig', {'button_label': 'admin.company.button.update'|trans}) }}
                    </div>
                    <div class="card-footer">
                        {{ include('company/_delete_form.html.twig') }}
                    </div>
                </div>
            </div>
        </section>
        <a class="btn icon icon-left btn-outline-primary" href="{{ path('company_index') }}"><i class="bi bi-chevron-left"></i><span>{{ 'admin.company.button.back_to_list'|trans }}</span></a>
    </div>
{% endblock %}
