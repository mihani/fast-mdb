{% extends 'base.html.twig' %}

{% block title %}{{'admin.company.list.title'|trans}}{% endblock %}

{% block body %}
<div class="page-heading">
    <div class="page-title">
        <div class="row">
            <div class="col-12 col-md-6 order-md-1 order-last">
                <h3>{{'admin.company.list.title'|trans}}</h3>
            </div>
        </div>
    </div>
    <section class="section">
        <div class="card">
            <div class="card-header">
                <a class="btn btn-primary" href="{{ path('company_new') }}">{{ 'admin.company.button.create'|trans }}</a>
            </div>
            <div class="card-body">
                <table class="table table-striped" id="company-table">
                    <thead>
                        <tr>
                            <th>{{ 'admin.company.field.name'|trans }}</th>
                            <th>{{ 'admin.company.field.created_at'|trans }}</th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                    {% for company in companies %}
                        <tr>
                            <td>{{ company.name }}</td>
                            <td>{{ company.createdAt ? company.createdAt|date('d-m-Y H:i:s') : '' }}</td>
                            <td>
                                <a class="btn btn-primary" href="{{ path('company_show', {'id': company.id}) }}">{{ 'admin.company.button.show'|trans }}</a>
                                <a class="btn btn-outline-secondary" href="{{ path('company_edit', {'id': company.id}) }}">{{ 'admin.company.button.edit'|trans }}</a>
                            </td>
                        </tr>
                    {% else %}
                        <tr>
                            <td colspan="5">{{ 'admin.company.no_record'|trans }}</td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </section>
</div>
{% endblock %}
