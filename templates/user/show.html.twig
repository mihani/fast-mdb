{% extends 'base.html.twig' %}

{% block title %}{{ user.getFullname() }}{% endblock %}

{% block body %}
<div class="page-heading">
    <div class="page-title">
        <div class="row">
            <div class="col-12 col-md-6 order-md-1 order-last">
                <h3>User : {{ user.getFullname() }}</h3>
            </div>
        </div>
    </div>
</div>
<div class="page-content">
    <section class="section row">
        <div class="col-12 col-lg-6">
            <div class="card">
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-lg">
                            <tbody>
                                <tr>
                                    <th>{{ 'user.fields.lastname'|trans }}</th>
                                    <td>{{ user.lastname }}</td>
                                </tr>
                                <tr>
                                    <th>{{ 'user.fields.firstname'|trans }}</th>
                                    <td>{{ user.firstname }}</td>
                                </tr>
                                <tr>
                                    <th>{{ 'user.fields.email'|trans }}</th>
                                    <td>{{ user.email }}</td>
                                </tr>
                                <tr>
                                    <th>{{ 'user.fields.roles'|trans }}</th>
                                    <td>{{ user.roles ? user.roles|json_encode : '' }}</td>
                                </tr>
                                <tr>
                                    <th>{{ 'user.fields.created_at'|trans }}</th>
                                    <td>{{ user.createdAt ? user.createdAt|date('Y-m-d H:i:s') : '' }}</td>
                                </tr>
                                <tr>
                                    <th>{{ 'user.fields.updated_at'|trans }}</th>
                                    <td>{{ user.updatedAt ? user.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
                                </tr>
                                <tr>
                                    <th>{{ 'user.fields.active'|trans }}</th>
                                    <td>
                                        {% if user.active %}
                                            <span class="badge bg-success">{{ 'user.active.active'|trans }}</span>
                                        {% else %}
                                            <span class="badge bg-danger">{{ 'user.active.deactive'|trans }}</span>
                                        {% endif %}
                                    </td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
                <div class="card-footer">
                    <div class="buttons d-flex flex-row">
                        <div class="justify-content-start">
                            <a class="btn btn-primary" href="{{ path('user_edit', {'id': user.id}) }}">{{ 'admin.user.button.edit'|trans }}</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <a class="btn icon icon-left btn-outline-primary" href="{{ path('user_index_by_company', {'id': user.company.id}) }}"><i class="bi bi-chevron-left"></i><span>{{ 'admin.user.button.back_to_list'|trans }}</span></a>
</div>
{% endblock %}
