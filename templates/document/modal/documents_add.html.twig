{% extends '_partials/_modal/_modal_form.html.twig' %}

{% set modalId = modalId %}

{% block modal_form_title %}{{ 'document.add.title'|trans}}{% endblock %}

{% block modal_form_body %}
    <div class="modal-body">
        {{ form_start(documentsForm, {'attr':{'class':'row'}}) }}
        <div class="form-group">
            {{ form_widget(documentsForm.files, {'attr':{'class':'form-control'}}) }}
        </div>
        <div class="form-actions d-flex justify-content-end">
            <button type="button" class="btn me-3" data-bs-dismiss="modal">
                {{ 'document.add.button.close'|trans }}
            </button>
            <button type="submit" class="btn btn-primary">
                {{ 'document.add.button.submit'|trans }}
            </button>
        </div>
        {{ form_end(documentsForm) }}
    </div>
{% endblock %}
