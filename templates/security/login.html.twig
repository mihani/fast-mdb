{% extends 'base-login.html.twig' %}

{% block body %}
<div class="row h-100">
    <div class="col-lg-5 col-12">
        <div id="auth-left">
            <div class="auth-logo">
{#                <a href="index.html"><img src="assets/images/logo/logo.png" alt="Logo"></a>#}
            </div>
            <h1 class="auth-title">{{ 'login.title'|trans }}</h1>

            <form method="post">
                {% if error %}
                    <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                {% endif %}

                {% if app.user %}
                    <div class="mb-3">
                        {{ 'login.already_logged_with'|trans({'%email%':app.user.email}) }}, <a href="{{ path('app_logout') }}">DÃ©connexion</a>
                    </div>
                {% endif %}

                <div class="form-group position-relative has-icon-left mb-4">
                    <input type="email"
                           class="form-control form-control-xl"
                           name="email"
                           id="loginEmail"
                           value="{{ last_username }}"
                           placeholder="{{ 'login.form_field.email'|trans }}"
                           required
                           autofocus
                    >
                    <div class="form-control-icon">
                        <i class="bi bi-person"></i>
                    </div>
                </div>
                <div class="form-group position-relative has-icon-left mb-4">
                    <input type="password"
                           class="form-control form-control-xl"
                           name="password"
                           id="loginPassword"
                           placeholder="{{ 'login.form_field.paswword'|trans }}"
                           required
                    >
                    <div class="form-control-icon">
                        <i class="bi bi-shield-lock"></i>
                    </div>
                </div>
                <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

                {#
                    Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
                    See https://symfony.com/doc/current/security/remember_me.html

                    <div class="form-check form-check-lg d-flex align-items-end">
                        <input class="form-check-input me-2" type="checkbox" name="_remember_me value="" id="rememberMeCheck">
                        <label class="form-check-label text-gray-600" for="rememberMeCheck">
                            Keep me logged in
                        </label>
                    </div>
                #}
                <button type="submit" class="btn btn-primary btn-block btn-lg shadow-lg mt-5">{{ 'login.form_field.submit'|trans }}</button>
            </form>
            <div class="text-center mt-5 text-lg fs-4">
                <p><a href="auth-forgot-password.html">{{ 'login.forgot_password'|trans }}</a></p>
            </div>
        </div>
    </div>
    <div class="col-lg-7 d-none d-lg-block">
        <div id="auth-right">

        </div>
    </div>
</div>
{% endblock %}
