<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <link href="https://fonts.googleapis.com/css2?family=Nunito:wght@300;400;600;700;800&display=swap" rel="stylesheet">
    <title>Fast MDB - {% block title %}{{ 'dashboard.title'|trans }}{% endblock %}</title>
    {% block stylesheets %}
        {{ encore_entry_link_tags('app') }}
    {% endblock %}
</head>
{# @var user \App\Entity\User #}
{% set user = app.user %}
<body>
    <div id="app">
        <div id="sidebar" class="active">
            {% include "_partials/_sidebar.html.twig" %}
        </div>
        <div id="main" class='layout-navbar'>
            <header>
                {% include "_partials/_vertical_nav.html.twig" with {'user': user } only %}
            </header>
            <div id="main-content">
                {% block body %}{% endblock %}
                <footer>
                    <div class="footer clearfix mb-0 text-muted">
                        <div class="float-start">
                            <p>2021 &copy; Mazer</p>
                        </div>
                        <div class="float-end">
                            <p>
                                Crafted with <span class="text-danger"><i class="bi bi-heart"></i></span> by <a href="http://ahmadsaugi.com">A. Saugi</a>
                            </p>
                        </div>
                    </div>
                </footer>
            </div>
        </div>
    </div>
    {% block javascripts %}
        {{ encore_entry_script_tags('app') }}
        {{ encore_entry_script_tags('main') }}
    {% endblock %}
</body>
</html>
